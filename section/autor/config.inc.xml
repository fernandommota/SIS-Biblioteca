<?xml version="1.0" encoding="ISO-8859-1"?>
<action-mapping>
	<permission
		name="ACCESS_ALL"
		label="Pode acessar todos os Autores."
	/>
	
	<action
		name="list"
		label="Listar Autores"
		default="true"
		description="">
		<menu action="create" />
		<menu function="search" />
	</action>

	<action
		name="view"
		label="Visualizar Autor"
		description="">
		<menu action="list" />
		<menu action="edit" />
		<menu function="print" />
	</action>

	<action
		name="create"
		label="Criar Novo Autor"
		description="">
		<menu function="save" />
		<menu action="list" image="close.png" />
	</action>

	<action
		name="edit"
		label="Editar Autor"
		description="">
		<menu function="save" />
		<menu action="list" image="close.png" />
	</action>	
		
	<action
		name="delete"
		label="Apagar Autor"
		description="">
		<menu function="delete" />
		<menu action="list" image="close.png" />
	</action>
	
</action-mapping>
